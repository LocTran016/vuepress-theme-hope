{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "2.0.0-alpha.5",
  "command": {
    "run": {
      "npmClient": "yarn"
    },
    "version": {
      "allowBranch": ["main", "v2"],
      "conventionalCommits": true,
      "exact": true,
      "ignoreChanges": ["**/__tests__/**", "**/*.md"],
      "message": "chore(release): publish %s"
    }
  }
}
