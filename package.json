{
  "name": "vuepress-theme-hope-root",
  "private": true,
  "description": "A light vuepress theme",
  "workspaces": [
    "demo/",
    "docs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "lerna run clean --stream",
    "copy": "lerna run copy --stream",
    "copy-watch": "lerna run copy --parallel -- --watch",
    "demo:build": "yarn workspace demo build",
    "demo:serve": "yarn workspace demo serve",
    "dev": "tsc --build --watch",
    "eslint": "eslint . --ext .js,.ts,.vue --fix",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "lint": "prettier --check --write . && yarn run eslint && yarn run markdownlint",
    "markdownlint": "markdownlint **/*.md --ignore **/node_modules/** --fix",
    "packages:check-update": "ncu --deep --timeout 600000",
    "packages:update": "ncu -u --deep --timeout 600000 && yarn install && yarn upgrade",
    "rollup:build": "lerna run rollup:build --parallel",
    "rollup:watch": "lerna run rollup:watch --parallel",
    "test": "jest -i",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.vue": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@rollup/plugin-typescript": "8.2.1",
    "@types/jest": "26.0.22",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "@vue/eslint-config-prettier": "6.0.0",
    "@vue/eslint-config-typescript": "7.0.0",
    "cpx": "1.5.0",
    "cross-env": "7.0.3",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-vue": "7.8.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "markdownlint-cli": "0.27.1",
    "npm-check-updates": "11.3.0",
    "postcss": "8.2.9",
    "postcss-loader": "5.2.0",
    "prettier": "2.2.1",
    "rollup": "2.44.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "3.0.1",
    "rollup-plugin-styles": "^3.14.1",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "rollup-plugin-vue": "6.0.0",
    "sass": "1.32.8",
    "sass-loader": "^11.0.1",
    "sort-package-json": "1.49.0",
    "ts-jest": "26.5.4",
    "ts-node": "9.1.1",
    "tslib": "2.1.0",
    "typescript": "4.2.3"
  }
}
